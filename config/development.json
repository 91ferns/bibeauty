{

    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },


    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": true, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },



    "middleware": {

        "construx": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {

                        "template": {
                            "module": "construx-dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "config": {
                                "prepend": "",
                                "append": "",
                                "amd": true
                            }
                        },

                        "browserify": {
                            "module": "construx-browserify",
                            "files": "/js/app.js"
                        },

                        "css": {
                            "module": "construx-sass",
                            "files": "/css/**/*.css"
                        },

                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
