{% extends 'base.html.twig' %}
{% block stylesheets %}
    <script src="{{ asset('/assets/js/datepicker/css/datepicker.css') }}" type="text/javascript"></script>
{% endblock stylesheets %}

{% block body %}

  <section id="top-map" class="nav-pad">
    <div id="results_map"></div>
  </section>

  <section id="below-map" class="nav-pad">
    <div class="container">
      <div class="col-lg-4">
        <form>
          <div class="form-group">
            <h4>Availability</h4>
          <div class="input-group">
            <input type="text" id="day" name="day" class="form-control" placeholder="Day"/>
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
          </div>
          <div class="input-group">
            <input type="text" id="time" name="time" class="form-control" placeholder="Time"/>
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
          </div>
        </div>
        <hr>
          <div class="form-group">
            <h4>Location</h4>
            <input type="text" id="location" name="location" class="form-control" placeholder="Enter Area or postcode"/>
          </div>
          <hr>
          <div class="form-group">
            <h4>Treatment Type / Category</h4>
            <div class="dropdown-group">
              <select id="treatment_type" name="treatment_type" class="form-control"><option>Treatment Type</option></select>
            </div>
            <div class="dropdown-group">
              <select id="treatment" name="treatment" class="form-control"><option>Treatment</option></select>
            </div>
          </div>
          <hr>
          <div class="form-group">
            <h4>Price Range</h4>
            <div class="range">
  	           <input type="text" id="amount_left" readonly style="">
               <input type="text" id="amount_right" readonly style="">
               <div id="slider-range"></div>
            </div>
          </div>
          <hr>
          <p>Update Button goes here</p>
        </form>
      </div>

        <div id="search_results" class="col-md-8">
          {% if results %}
          {% for result in results %}
          <div class="result">
            <div class="row location">
              <div class="col-md-9">
                <h3 class="business-name">{{result.name }}</h3>
                <div class="reviews">
                  <div class="reviews-number col-md-3">
                    5 Reviews
                  </div>
                  <a class="col-md-9" href="#">
                    <i class="glyphicon glyphicon-map-marker"></i>Show on Map
                  </a>
                  <div class="location">
                    {{result.address.city}},{{result.address.state}}
                  </div>
                  <div class="description>">
                    {{result.description}}
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <img class="business-logo" src="{{result.logo}}"/>
              </div>
            </div>

 {% if result.treatments %}
            <div class="row treatments">
              <ul class="col-md-12 list-group">
                {% for treatment in result.treatments %}
              <li class="list-group-item row">
              <a href="treatment/detail/{{treatment.id}}">
              <div class="col-md-8 treatment-name">
                          {{treatment.name}}
                      </div>
                      <div class="col-md-4">
                        <div class="col-md-6 savings">
                            Save <span class="blue">{{treatment.percent_discount}}%</span>
                        </div>
                        <div class="notify-btn">
                          <a href="#">From ${{treatment.start_dollars}}</a>
                        </div>
                      </div>
              </a>
              </li>
                  {% endfor %}           
                </ul>
                <div class="notify-btn">
                  <a href="#">Show  More</a>
                </div>
                {% endif %}  
              </div>
            </div>
            {% endfor %}
            {% else %}

            <div class="alert alert-warning">
              Sorry There are no Results.
            </div>

            {% endif %}

          </div>
        </section>
  {% endblock body %}

{% block javascripts %}
  <script src="https://maps.googleapis.com/maps/api/js"></script>
  <script src="{{ asset('/assets/js/resultsmap.js') }}" type="text/javascript"></script>
  <script src="{{ asset('/assets/js/datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
  <script>$(document).ready(function(){
           $('#day').datepicker();
         });
  </script>
{% endblock javascripts %}
