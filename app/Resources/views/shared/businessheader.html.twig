{% if business.hasHeaderAttachment %}
  <div class="business-header-image" style="background-image: url('{{ business.getHeaderAttachment.getKey | s3 }}')">
{% else %}
  <div class="business-header-image" style="background-image: url('{{ asset('assets/images/placeholder-image1.png') }}');">
{% endif %}

</div>


<div class="container">

  <div class="row">

    <div class="col-md-10">

      <div class="row">

        <div class="col-md-8">

          <div class="business-info-panel">
            {% if business.hasLogoAttachment %}
            <div class="pull-left floated-image">
              <img src="{{ business.getLogoAttachment.getKey | s3 }}" class="img-circle">
            </div>
            {% endif %}
            <h1>
              {{business.getName}}
              <div class="stars">
                {{ business.getAverageRating | rating }} from Yelp&trade;
              </div>
            </h1>
            <h2>{{business.getAddress.getStreet}}, {{business.getAddress.getCity}}, {{ business.getAddress.getState }}</h2>
            <p><a href="#">Show on map</a></p>

            <hr>

            {% set p = path('business_path', {
              id: business.getId,
              slug: business.getSlug
            }) %}

            <div class="business-info">

              <ul class="nav nav-list">
                <li><a href="tel:{{business.getLandline | phone}}" class="phone">
                  <i class="fa fa-phone"></i>{{business.getLandline | phone}}
                </a></li>
                {% if business.getEmail %}
                <li><a href="mailto:{{business.getEmail}}" class="email-link">
                  <i class="fa fa-envelope-o"></i>{{business.getEmail}}
                </a></li>
                {% endif %}
                {% if business.getWebsite %}
                <li><a href="{{business.getWebsite}}" target="_blank" class="website-link">
                  <i class="fa fa-globe"></i>{{business.getWebsite}}
                </a></li>
                {% endif %}
                <li class="payment"><span class="almost-a">
                  <span>We Accept</span>
                  {% if business.getAcceptsCredit %}
                  <img src="{{ asset('assets/images/accepts-credit.png') }}">
                  {% else %}
                  Cash
                  {% endif %}
                </span></li>
              </ul>
            </div> <!-- /.business-info -->

          </div> <!-- /.business-info-panel -->

        </div> <!-- /.col-md-8 -->

        <div class="col-md-4">

        </div> <!-- /.col-md-4 -->

      </div> <!-- /,row -->

    </div> <!-- /.col-md-10 -->
  </div>

</div>
