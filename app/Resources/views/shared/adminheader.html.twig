<header class="business-panel-header">

  <div class="row">

    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

      <select id="BusinessesSelect" class="businesses-select form-control" name="BusinessSelected">
        <option></option>
        {% if app.user.hasBusinesses %}
          {% for business in app.user.getBusinesses %}
          <option value="{{ path('admin_business_bookings_path', { 'slug': business.getSlug, 'id': business.getId}  ) }}">{{business.getName}}</option>
          {% endfor %}
        {% endif %}
      </select>

    </div>

    <div class="col-md-4">
      <div class="admin-buttons align-center align-md-right">
        <a href="{{path('admin_new_businesses_path')}}" class="admin-btn">
          <img src="{{ asset('assets/images/add-button.png') }}" alt="Add">
          Add Business
        </a>
      </div>

    </div>

  </div>

</header>
