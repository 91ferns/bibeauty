<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <title>{% block title %}BiBeauty{% endblock %}</title>
    {% stylesheets
        'assets/css/main.scss'
        filter='sass,cssrewrite' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
</head>
<body class="base">

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="{{ asset('assets/images/logo.png') }}">
        </a>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navagation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden-xs">
                    <i class="glyphicon glyphicon-question-sign"></i>
                </li>
                <li class="hidden-xs">
                    <a href="#">Need Help</a>
                </li>
                <li class="hidden-lg hidden-md hidden-sm">
                    <a href="#">Need Help</a>
                </li>
                <li class="hidden-xs" id="notify-btn">
                    <a href="#">Notify Me</a>
                </li>
                <li class="hidden-lg hidden-md hidden-sm">
                  <a href="#">Notify Me</a>
                </li>
                <li class="hidden-xs" id="login-btn">
                    <a href="{{ path('login_route') }}">Login<i class="glyphicon glyphicon-play-circle"></i></a>
                </li>
                <li class="hidden-lg hidden-md hidden-sm">
                  <a href="{{ path('login_route') }}">Login<i class="glyphicon glyphicon-play-circle"></i></a>
                </li>
                <li class="hidden-xs" id ="notify-btn">
                    <a href="{{ path('signup_route') }}">Sign Up<i class="glyphicon glyphicon-play-circle"></i></a>
                </li>
                <li class="hidden-lg hidden-md hidden-sm">
                    <a href="{{ path('signup_route') }}">Sign Up<i class="glyphicon glyphicon-play-circle"></i></a>
                </li>
                <li><a href="#"><i class="fa fa-facebook hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Facebook</span></a></li>
                <li><a href="#"><i class="fa fa-twitter hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Twitter</span></a></li>
            </ul>
        </div>
    </div>
</nav>

<main>
{% block body %}{% endblock %}
</main>

<footer id="site-main-footer">

    <div class="top-footer">
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Site Map</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="#">About Us</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">Contact Us</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Business Owners</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="#">How it Works?</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">User Benefits</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">Business Benefits</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">Add Business</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Support &amp; Information</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="#">FAQ</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">Privacy Policy</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#">Terms and Conditions</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

            </div>
        </div>
    </div>

    <div class="bottom-footer">
        <img src="{{ asset('assets/images/ft_logo.png')}}" alt="BiBeauty">
    </div>

</footer>



<!-- footer -->

{% javascripts
    '@vendor_assets'
    'assets/js/*'
    filter='uglifyjs2' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
</body>
</html>
