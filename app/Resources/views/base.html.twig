<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% include 'shared/favicon.html.twig' %}

    <title>{% block title %}BiBeauty{% endblock %}</title>

    {% stylesheets
      '@vendor_css'
      filter='cssrewrite' output='css/vendor.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
        'assets/css/main.scss'
        filter='sass,cssrewrite' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
</head>
<body class="base">

  <nav class="navbar navbar-default navbar-fixed-top" id="primary-nav" role="navigation">
    <div class="container-fluid">
      <div class="brand-wrapper">
        <div class="navbar-brand">
          <div class="container" style="position:relative;">

            <button type="button" class="navbar-toggle visible-sm visible-xs" data-toggle="offcanvas" data-recalc="false" data-target=".navmenu" data-canvas=".canvas">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <div class="navbar-right visible-md visible-lg">
              <ul>
                <li>
                  <a href="https://www.facebook.com/MyBiBeauty?fref=ts" target="_blank">
                    <i class="fa fa-facebook hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Facebook</span>
                  </a>
                </li>
                <li>
                  <a href="https://twitter.com/MyBiBeauty" target="_blank">
                    <i class="fa fa-twitter hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Twitter</span>
                  </a>
                </li>
              </ul>
            </div>

            <div class="navbar-left visible-md visible-lg">
              <ul>
                {% if app.user %}
                  <li>
                    <a href="{{ path('admin_businesses_path') }}">
                      Welcome {{ app.user.getFirstName }}
                    </a>
                  </li>
                  <li class="nav-separator"></li>
                  <li><a href="{{path('logout_path')}}">
                    Logout
                  </a></li>
                {% else %}
                  <li class="">
                    <a href="{{ path('login_route') }}">
                      Login
                    </a>
                  </li>
                  <li class="nav-separator"></li>
                  <li class="">
                    <a href="{{ path('signup_route') }}">
                      Sign Up
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div> <!-- /.navbar-right -->

            <span class="sr-only">BiBeauty Admin</span>
            <a href="/"><img src="{{ asset('assets/images/logo.png') }}" alt="BiBeauty"></a>
          </div> <!-- /.container -->
        </div> <!-- .navbar-brand -->
      </div>

    </div>
  </nav>

  <div class="navmenu navmenu-default navmenu-fixed-left">

    <ul class="nav navmenu-nav">
      {% if app.user %}
        <li>
          <a href="{{ path('admin_businesses_path') }}">
            Welcome {{ app.user.getFirstName }}
          </a>
        </li>
        <li><a href="{{path('logout_path')}}">
          Logout
        </a></li>
      {% else %}
        <li class="">
          <a href="{{ path('login_route') }}">
            Login
          </a>
        </li>
        <li class="">
          <a href="{{ path('signup_route') }}">
            Sign Up
          </a>
        </li>
      {% endif %}
    </ul>
  </div>

  <div class="canvas">

    <main>
    {% block body %}{% endblock %}
    </main>

    <footer id="site-main-footer">

      <div class="top-footer">
          <div class="container">
              <div class="row">

                  <div class="col-md-4">
                      <div class="panel panel-default">
                          <!-- Default panel contents -->
                          <div class="panel-heading">Site Map</div>

                          <!-- List group -->
                          <ul class="list-group">
                              <li class="list-group-item">
                                  <a href="{{path('about_path')}}">About Us</a>
                              </li>
                              <li class="list-group-item">
                                  <a href="{{path('contact_path')}}">Contact Us</a>
                              </li>
                          </ul>
                      </div> <!-- /.panel -->
                  </div>

                  <div class="col-md-4">
                      <div class="panel panel-default">
                          <!-- Default panel contents -->
                          <div class="panel-heading">Business Owners</div>

                          <!-- List group -->
                          <ul class="list-group">
                              <li class="list-group-item">
                                  <a href="{{path('admin_new_businesses_path')}}">Add Business</a>
                              </li>
                          </ul>
                      </div> <!-- /.panel -->
                  </div>

                  <div class="col-md-4">
                      <div class="panel panel-default">
                          <!-- Default panel contents -->
                          <div class="panel-heading">Support &amp; Information</div>

                          <!-- List group -->
                          <ul class="list-group">
                              <li class="list-group-item">
                                  <a href="{{ path('privacy_path') }}">Privacy Policy</a>
                              </li>
                              <li class="list-group-item">
                                  <a href="{{ path('terms_path') }}">Terms and Conditions</a>
                              </li>
                          </ul>
                      </div> <!-- /.panel -->
                  </div>

              </div>
          </div>
      </div>

      <div class="bottom-footer">
          <img src="{{ asset('assets/images/ft_logo.png')}}" alt="BiBeauty">
      </div>

    </footer> <!-- footer -->

  </div>

{% javascripts
    '@vendor_assets'
    '@react_components'
    'assets/js/*'
    filter='reactjsx'
    filter='?uglifyjs2'
    output='js/client.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
<script src="https://maps.googleapis.com/maps/api/js?sensor=true&callback=initMap"></script>

{% block javascripts %}{% endblock %}
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-67596906-1', 'auto');
  ga('send', 'pageview');

</script>

</body>
</html>
