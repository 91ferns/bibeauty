<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% include 'shared/favicon.html.twig' %}

    <title>{% block title %}BiBeauty{% endblock %}</title>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300" rel="stylesheet" type="text/css">
    {% stylesheets
      '@vendor_css'
      filter='cssrewrite' output='css/vendor.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
        'assets/css/main.scss'
        filter='sass,cssrewrite' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
</head>
<body class="base">

<nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="{{ asset('assets/images/logo.png') }}" alt="BiBeauty">
        </a>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navagation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="">
                    <a href="{{path('contact_path')}}" class="btn btn-default" id="need-help">
                      <i class="fa fa-question-circle hidden-xs"></i> Need Help
                    </a>
                </li>
                <li class="">
                    <a href="#" class="btn btn-default" id="blue-button">
                      Notify Me
                    </a>
                </li>
                {% if app.user %}
                  <li>
                    <a href="{{path('logout_path')}}" class="btn btn-default" id="white-button">
                      Logout
                    </a>
                  </li>
                  <li>
                    <a href="{{path('admin_path')}}" class="btn btn-default" id="blue-button">
                      Account
                    </a>
                  </li>
                {% else %}
                  <li class="">
                      <a href="{{ path('login_route') }}" class="btn btn-default" id="white-button">
                        Login<i class="glyphicon glyphicon-play-circle hidden-xs"></i>
                      </a>
                  </li>
                  <li class="">
                      <a href="{{ path('signup_route') }}" class="btn btn-default" id="blue-button">
                        Sign Up<i class="glyphicon glyphicon-play-circle hidden-xs"></i>
                      </a>
                  </li>
                {% endif %}
                <li>
                  <a href="https://www.facebook.com/MyBiBeauty?fref=ts" target="_blank">
                    <i class="fa fa-facebook hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Facebook</span>
                  </a>
                </li>
                <li>
                  <a href="https://twitter.com/MyBiBeauty" target="_blank">
                    <i class="fa fa-twitter hidden-xs"></i><span class="hidden-lg hidden-md hidden-sm">Twitter</span>
                  </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main>
{% block body %}{% endblock %}
</main>

<footer id="site-main-footer">

    <div class="top-footer">
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Site Map</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="{{path('about_path')}}">About Us</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{path('contact_path')}}">Contact Us</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Business Owners</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="{{path('admin_new_businesses_path')}}">Add Business</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

                <div class="col-md-4">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Support &amp; Information</div>

                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="{{ path('privacy_path') }}">Privacy Policy</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{ path('terms_path') }}">Terms and Conditions</a>
                            </li>
                        </ul>
                    </div> <!-- /.panel -->
                </div>

            </div>
        </div>
    </div>

    <div class="bottom-footer">
        <img src="{{ asset('assets/images/ft_logo.png')}}" alt="BiBeauty">
    </div>

</footer>
<!-- footer -->
{% javascripts
    '@vendor_assets'
    '@react_components'
    'assets/js/*'
    filter='reactjsx'
    filter='?uglifyjs2'
    output='js/client.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
<script src="https://maps.googleapis.com/maps/api/js?sensor=true&callback=initMap"></script>

{% block javascripts %}{% endblock %}
