{% extends 'base.html.twig' %}

{% block body %}

<section id="contact" class="nav-pad">

  <div class="container">

    <div class="row">
      <div class="col-md-7">

        <h1 class="login-title blue-title"><strong>Get in Touch</strong></h1>

        {{ form_start(form) }}

          {% if message is defined %}
            <div class="alert alert-warning">
              {{message}}
            </div>
          {% endif %}

          <div class="row">

            <div class="col-md-6">
              <div class="form-group">
                {{ form_widget(form.name, { 'attr': { 'class': 'input-lg', 'placeholder': 'Name' } }) }}
                {{ form_errors(form.name) }}
              </div>
            </div> <!-- /.col -->

            <div class="col-md-6">
              <div class="form-group">
                {{ form_widget(form.email, { 'attr': { 'class': 'input-lg', 'placeholder': 'Email Address' } }) }}
                {{ form_errors(form.email) }}
              </div>
            </div> <!-- /.col -->

          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                {{ form_widget(form.subject, { 'attr': { 'class': 'input-lg', 'placeholder': 'What\'s up?' } }) }}
                {{ form_errors(form.subject) }}
              </div>
            </div>
          </div>

          <div class="form-group">
            {{ form_widget(form.description, { 'attr': { 'class': 'input-lg', 'rows': 7, 'placeholder': 'Tell us more' } }) }}
            {{ form_errors(form.description) }}
          </div>

          <div class="row">
            <div class="col-md-7">
              <p>Alternatively, you can call us on +1 310 693 9076 or email <a href="hello@bibeauty.com">hello@bibeauty.com</a></p>
            </div>
            <div class="col-md-5 align-right">
              <input type="submit" value="Submit"
                class="btn btn-primary btn-lg" />
            </div>

        {{ form_end(form) }}

      </div>

    </div> <!-- /.row -->


  </div>

</section>

{% endblock %}
