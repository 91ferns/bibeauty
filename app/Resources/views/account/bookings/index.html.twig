{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    Bookings
    <a href="{{path('admin_new_booking_path')}}" class="admin-btn"><i class="fa fa-plus fa-lg"></i><strong>Add a Booking</strong></a>
  </div>
  <div class="panel-body">
    <table class="table businesses-table">
      <thread>
        <tr>
          <th>ID</th>
          <th><a href="#" id="check-all-box">All</a></th>
          <th>Cilent</th>
          <th>Services</th>
          <th>Category</th>
          <th>Treatment</th>
          <th>Date</th>
          <th>Time</th>
          <th>Price</th>
          <th>Therapist</th>
          <th>Status</th>
        </tr>
      </thread>
      <tbody>

      </tbody>

    </table>
    {% if bookings | length > 0 %}
    <ul class="list-group">
      {% for booking in bookings %}
      <li class="list-group-item">
        <a href="{{ path('admin_booking_path', { 'slug': booking.getSlug, 'id': booking.getId}  ) }}">
          {{ booking.getName }}
        </a>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    <p>You have no bookings</p>
    {% endif %}
  </div>
</div>


{% endblock %}
