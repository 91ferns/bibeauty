{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    Treatments for {{ business.getName }}
    <a class="admin-btn" href="{{ path('admin_business_services_new_path', { slug: business.getSlug, id: business.getId })}}">
      <i class="fa fa-plus fa-lg"></i><strong>Add a treatment</strong>
    </a>
  </div>
  <div class="panel-body">
    {% if services.count > 0 %}
      <ul class="list-group">
      {% for service in services %}
        <li class="list-group-item">
          <a href="">{{ service.getLabel }}</a>
        </li>
      {% endfor %}
      </ul>
    {% else %}
      <p>No treatments are added.</p>
    {% endif %}
  </div>
</div>


{% endblock %}
