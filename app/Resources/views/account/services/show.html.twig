{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    {{ service.getServiceType.getLabel }}
      <a class="admin-btn" data-toggle="modal" href="#add-availability" href="{{ path('admin_business_services_new_path', { slug: business.getSlug, id: business.getId,serviceid:service.getId })}}">
        <i class="fa fa-plus fa-lg"></i><strong>Add Availability</strong>
      </a>
  </div>
  <div class="panel-body">
    {% if service %}
        <div class="form-group">
          <label class="control-label" for="CurrentPrice" >CurrentPrice</label>
          <div class="input-group">
            <span class="input-group-addon">$ </span>
              <input type="text" class="form-control" name="CurrentPrice" placeholder="0.00" value="{{ service.CurrentPrice }}.00" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="OriginalPrice" >OriginalPrice</label>
          <div class="input-group">
            <span class="input-group-addon">$ </span>
            <input type="text" name="OriginalPrice" class="form-control" placeholder="0.00" value="{{ service.OriginalPrice }}.00"/>
          </div>
        </div>

      </ul>
    {% else %}
      <p>No treatments have been added.</p>
    {% endif %}
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="add-availability" tabindex="-1" role="dialog" aria-labelledby="add-availability-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {#{ form_start(form) }#}
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="add-service-category-label">Add Availability</h4>
        </div>
        <div class="modal-body">
          {#{ form_widget(serviceForm) }#}
          {% include "account/availability/form.html.twig" %}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" value="Create"
               class="btn btn-primary" />
        </div>
      {#{ form_end(serviceForm) }#} <!-- /. form -->
  <!--  </div>
  </div>
</div>


{% endblock %}
