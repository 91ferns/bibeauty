{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">Panel heading without title</div>
  <div class="panel-body">
    <a href="{{path('admin_businesses_path')}}" class="btn btn-primary">Add a business</a>

    {% if businesses %}
      <ul>
      {% for business in businesses %}
        <li><a href="{{ path('business_path', { 'slug': business.slug, 'id': business.id} ) }}">
          {{ business.name }}
        </a></li>
      {% endfor %}
      </ul>
    {% else %}
      No businesses
    {% endif %}
    
  </div>
</div>

{% endblock %}
