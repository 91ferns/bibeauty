{% extends 'admin.html.twig' %}

{% block toolbar %}
<a href="{{ path('admin_business_treatments_new_path', { slug: business.getSlug, id: business.getId })}}">
  <i class="fa fa-plus fa-lg"></i>Add a treatment
</a>
{% endblock %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-body">
    {% if treatments.count > 0 %}
    <div class="table-responsive-old">
      <table class="table table-striped businesses-table">
        <thead>
          <tr>
            <th class="select-col">ID</th>
            <th>Treatment</th>
            <th>Name</th>
            <th>Duration</th>
            <th>Full Price</th>
          </tr>
        </thead>
        <tbody>
          {% for treatment in treatments %}
          <tr>
            <td class="select-col">
              <a href="{{ path('admin_business_treatments_show_path',{
                'id': business.getId,
                'slug': business.getSlug,
                'treatmentId': treatment.getId
                }) }}">{{ treatment.id }}</a>
            </td>
            <td title="Treatment">
              <span class="icon-rounded">
                {{ treatment.getTreatmentCategory.getCategoryName | slice (0, 1) | capitalize }}
              </span>
              {{ treatment.getLabel }}
            </td>
            <td title="Name">
              {{ treatment.getName }}
              <a href="{{ path('admin_business_treatments_show_path',{
                'id': business.getId,
                'slug': business.getSlug,
                'treatmentId': treatment.getId
                }) }}"><i class="fa fa-pencil fa-small"></i></a>
            </td>
            <td title="Duration">{{treatment.getDuration | duration }}</td>
            <td title="Price">${{ treatment.getOriginalPrice }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    {% else %}
      <p>No treatments are added.</p>
    {% endif %}
  </div>
</div>

