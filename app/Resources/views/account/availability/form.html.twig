
<div class="panel panel-default">
  <div class="panel-body">
      <div class="form-group">
        <label for="Day">Date</label>
        <div class="input-group">
          <input type="text" id="DayField" name="Day" class="form-control" placeholder="Day" />
          <span class="input-group-addon"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
        </div>
        <label for="Time">Time</label>
        <div class="input-group">
          <input type="time" id="TimeField" name="Time" class="form-control" placeholder="Time" />
          <span class="input-group-addon"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
        </div>
        <div class="input-group">
          <label for="">Recurring</label><br>
          <!--<input type="checkbox" name="Recurring" class="form-control" />-->
          <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary active" >
                      <input type="radio" name="Recurring" checked class="form-control" /> NONE
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="Recurring_Monthly" class="form-control" /> MONTHLY
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="Recurring_Weekly" class="form-control" /> WEEKLY
                </label>
            </div>

        </div>
      </div> <!-- /.form-group -->
  </div>
  <script>$('[checked="checked"]').parent().addClass("active");</script>
</div>
