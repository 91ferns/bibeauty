{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    Bookings
    <a href="{{path('admin_new_booking_path')}}" class="admin-btn"><i class="fa fa-plus fa-lg"></i><strong>Add a Treatment</strong></a>
  </div>
  <div class="panel-body">
    <form action="{{ path('admin_new_availability_path') }}" method="post">
      <div class="form-group">
        <label for="">Date</label>
        <div class="input-group">
          <input type="text" id="DayField" name="Day" class="form-control" placeholder="Day" />
          <span class="input-group-addon"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
        </div>
        <div class="input-group">
          <label for="">Time</label>
          <input type="time" id="TimeField" name="Time" class="form-control" placeholder="Time" />
          <span class="input-group-addon"><i class="fa fa-chevron-circle-down fa-lg"></i></span>
        </div>
        <div class="input-group">
          <label for="">Recurring</label>
          <input type="checkbox" name="Recurring" class="form-control" />
        </div>
      </div> <!-- /.form-group -->
    </form>
  </div>
</div>


{% endblock %}
jQuery(function($){$("#DayField").datepicker()});
