{% extends 'admin.html.twig' %}

{% block toolbar %}
<div class="admin-buttons align-center align-md-right">
  <a href="{{path('admin_new_products_path')}}" class="admin-btn">
    <img src="{{ asset('assets/images/add-button-toolbar.png') }}" alt="Add">
    Add Product
  </a>
</div>
{% endblock %}

{% block body %}
<div class="panel panel-default new-panel">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-7">

        {{ form_start(form, {'attr': { 'novalidate': 'true' }} ) }}

        <div class="row">
          <div class="col-md-4 col-xs-6">
              {{ form_label(form.thumbnail ) }}
              {{ form_widget(form.thumbnail) }}
          </div>
          {% if form.vars.data.id %}
            {% if form.vars.data.hasThumbnail %}
              <img src="{{ form.vars.data.getThumbnail.getKey | s3}}" class="img-responsive">
            {% endif %}
          {% endif %}
        </div>

        <p>&nbsp;</p>

        {{ form_widget(form) }}

        {% if form.vars.data.id %}
          <input type="submit" value="Update"
               class="btn btn-primary btn-lg" />
        {% else %}
          <input type="submit" value="Create"
               class="btn btn-primary btn-lg" />
        {% endif %}

        {{ form_end(form) }}

      </div> <!-- /.col-md-7 -->

    </div> <!-- /.row -->

  </div> <!-- /.panel-body -->

</div>

{% endblock %}
