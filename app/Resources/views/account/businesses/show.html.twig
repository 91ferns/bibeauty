{% extends 'admin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    {{ business.getName }}
    <a href="{{ path('admin_business_services_new_path', { id: business.getId, slug: business.getSlug })}}" class="admin-btn"><i class="fa fa-plus fa-lg"></i><strong>Add a treatment</strong></a>
    <a href="#" class="admin-btn"><i class="fa fa-trash-o fa-lg"></i><strong>Delete</strong></a>
  </div>
  <div class="panel-body">
    {{ form_start(businessForm) }}
        {{ form_widget(businessForm) }}
        <input type="submit" value="Edit Business"
             class="btn btn-primary" />
    {{ form_end(businessForm) }} <!-- /. form -->
  </div>
  {% if business.getServices.count > 0 %}
    <ul class="list-group">
    {% for serviceCategory in business.getServices %}
      <li class="list-group-item">
        <a href="{{ path('admin_services_categories_path', { slug: business.getSlug, id: business.getId, category: serviceCategory.getSlug })}}">{{ serviceCategory.getLabel }}</a>
      </li>
    {% endfor %}
    </ul>
  {% endif %}
</div>

{% endblock %}
