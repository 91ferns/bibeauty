<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'shared/favicon.html.twig' %}

    <title>{% block title %}BiBeauty{% endblock %}</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300" rel="stylesheet" type="text/css">
    {% stylesheets
      '@vendor_css'
      filter='cssrewrite' output='css/vendor.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
        'assets/css/main.scss'
        filter='sass,cssrewrite' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
</head>
<body class="admin">

<nav class="navbar navbar-default navbar-fixed-top" id="primary-nav" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <!--<a href="#" class="hide-menu btn btn-default hidden-sm hidden-xs">
          <span><i class="glyphicon glyphicon-menu-hamburger"></i> Toggle Menu</span>
        </a>
        <a class="navbar-brand hidden-md hidden-lg">
          BiBeauty Admin
        </a>-->
        <button type="button" class="navbar-toggle collapsed hidden-md hidden-lg" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand"  href="{{ path('admin_businesses_path') }}"><img src="{{asset('assets/images/bb_admin_logo.png') }}" /></a>
      </div>


      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="{{path('admin_path')}}" class="btn btn-default">
              <!--<span class="account-label">My Account</span>
              <span class="account-icon"><img src="{{asset('assets/images/account-generic.png') }}"></span>-->
              Welcome
              <span class="account-email">{{ app.user.getEmail() }}!</span>
            </a></li>
            <li><a href="{{path('logout_path')}}" class="btn btn-default">Logout</a></li>
        </ul>
        <ul class="nav navbar-nav hidden-md hidden-lg">
          {% include 'shared/nav.html.twig' %}
        </ul>
      </div>

    </div>
</nav>

<main>

  <!--<nav id="secondary">
    <ul class="nav nav-pills nav-stacked">
      {#% include 'shared/nav.html.twig' %#}
    </ul>
  </nav>-->

  <section id="admin-main">
    {% if app.session.flashbag.all() %}
    <div class="alert" role="alert">
      <ul>
        {% for flashMessage in app.session.flashbag.get('notice') %}
          <li class="notice">
              {{ flashMessage }}
          </li>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
          <li class="error">
              {{ flashMessage }}
          </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    <div class="admin-main-inner">
      <div class="container">
      {% block body %}{% endblock %}
    </div>
    </div>

  </section>

</main>

<!-- footer -->
