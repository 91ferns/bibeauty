<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'shared/favicon.html.twig' %}

    <title>{% block title %}BiBeauty Admin{% endblock %}</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300" rel="stylesheet" type="text/css">
    {% stylesheets
      '@vendor_css'
      filter='cssrewrite' output='css/vendor.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets
        'assets/css/main.scss'
        filter='sass,cssrewrite' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
    <style type="text/css">
    html, body {
      height: 100%;
    }
    </style>
</head>
<body class="admin">

  <nav class="navbar navbar-default navbar-fixed-top" id="primary-nav" role="navigation">
    <div class="container-fluid">
      <button type="button" class="navbar-toggle visible-sm visible-xs" data-toggle="offcanvas" data-recalc="false" data-target=".navmenu" data-canvas=".canvas">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="brand-wrapper">
        <a class="navbar-brand">
          <span class="sr-only">BiBeauty Admin</span>
          <img src="{{ asset('assets/images/logo.png') }}" alt="BiBeauty">
        </a>
      </div>
    </div>
  </nav>

  <div class="navmenu navmenu-default navmenu-fixed-left">
    {% if app.user.hasBusinesses %}
    <ul class="nav navmenu-nav">
      {% for business in app.user.getBusinesses %}
        <li><a data-id="{{ business.getId }}" href="{{ path('admin_business_bookings_path', { 'slug': business.getSlug, 'id': business.getId}  ) }}">{{business.getName}}</a></li>
      {% endfor %}
    </ul>
    {% endif %}
    <ul class="nav navmenu-nav">
      <li><a href="{{ path('logout_path') }}">Logout</a></li>
    </ul>
  </div>

  <div class="canvas">

    <div class="container">
      <section id="admin-main">

        <div class="alert" role="alert">
          <ul>
            {% for flashMessage in app.session.flashbag.get('notice') %}
              <li class="notice">
                  {{ flashMessage }}
              </li>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
              <li class="error">
                  {{ flashMessage }}
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="admin-main-inner">
          {% block body %}{% endblock %}
        </div>

      </section>
    </div><!-- /.container -->

  </div>

<!-- footer -->
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-67596906-1', 'auto');
  ga('send', 'pageview');
</script>

{% javascripts
    '@vendor_assets'
    '@react_components'
    'assets/js/*'
    filter='reactjsx'
    filter='?uglifyjs2'
    output='js/client.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% block javascripts %}{% endblock %}
</body>
</html>
